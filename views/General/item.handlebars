<div>
    <p class="pro-titles">{{cate}} > {{title}}</p>
</div>


<div class="pro-contain">
    <div class="pro-img">
        <img src="/img/{{this.productImg}}" alt="{{this.title}}" width="50%" height="60%">
    </div>

    <form class="pro-form" action="/cart/add/{{_id}}" method="POST">
        <div class="pro-detail">
            <div class="pro-up">
                <p class="pro-title" name="title">{{title}}</p>

                {{#if_eq bestSeller true}}
                <p class="pro-best">Amazon charts</p>
                {{/if_eq}}
            </div>

            <div class="pro-down">
                <p class="pro-price" name="price">Price: <span class="pro-price-2">CDN$: {{price}}</span>
                </p>
                <div class="pro-des">{{description}}</div>
                <div class="pro-quantity">
                    {{#if_higher quantity 0}}
                    In Stock: {{quantity}}
                    {{else}}
                    Currently Out of Stock
                    {{/if_higher}}
                </div>

                <label class="pro-quan" for="p_quan">Quantity</label>
                <select name="addQuantity" id="p_quan">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>

                </select>

                <button type="submit" class="form-sub">Add to Cart</button>

            </div>


        </div>
    </form>

</div>